#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(
    (
      find ~/code -mindepth 1 -maxdepth 1 -type d && 
      find ~/.dotfiles ~/notes -mindepth 0 -maxdepth 0 -type d &&
      echo -e $OTHER_CODE_DIRS
    ) | sed -r '/^\s*$/d' | fzf
  )
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr -d .)

if ! tmux has-session -t "$selected_name" 2>/dev/null; then
  tmux new-session -ds "$selected_name" -c "$selected"
fi

if [[ -z $TMUX ]]; then
  tmux attach -t "$selected_name" # you are not in tmux
else
  tmux switch-client -t "$selected_name" # you are in tmux
fi
